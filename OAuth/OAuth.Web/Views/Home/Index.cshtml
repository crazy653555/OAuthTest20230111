@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    @if (ViewBag.User is null)
    {
        <h1 class="display-4">Welcome</h1>
        <a class="btn btn-success" asp-action="LineLogin">Line Login</a>
    }
    else
    {
        <h1 class="display-4">Hi, @ViewBag.User.DisplayName</h1>
        <p><img src="@ViewBag.User.PictureUrl" width="128" height="128" /></p>
    }
</div>
